<!DOCTYPE html>
<html>
 <head>
   <% include ./partials/head %>
 </head>
 <body>
     <% include ./partials/nav %>
   <h1 class='center'>My To-Do List</h1>
   <hr />
   <div class='row'>
     <div class='col s12 m4'>
       <h3>Add a to-do item:</h3>
       <form action='/notes' method='POST'>
         <input type='text' name='title' placeholder='To-Do:' />
         <input type='text' name='content' placeholder='Details' />
         <button class='btn btn-waves' type='submit'>Add</button>
       </form>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>To-Do:</th>
         <th>Details</th>
         <th>x</th>
       </thead>
       <tbody>
         <% notes.forEach( function(note) { %>
           <% action = '/notes/' + note.id %>
             <tr>
             <td>
               <a href=<%= action %>><%= note.title %></a>
             </td>
             <td><%= note.content %></td>
             <td>
               <form action= <%= action %> method="POST" >
                 <button class='btn waves-effect' type='submit'>Delete</button>
               </form>
             </td>
         <% }); %>
       </tbody>
     </table>
   </body>
</html>